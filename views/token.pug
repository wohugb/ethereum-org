extends layout

block vars
  - var title='Create a cryptocurrency contract in Ethereum'
  - var url='token'
  - var image='token'

block content
  include mixins/recipes.pug
  .breadcrumb.animateme(data-when="enter", data-from="1", data-to="0.8", data-opacity="0", data-translatey="-20")
    a(href="/").index 以太坊
    strong »  创建您自己的加密货币
    a(href="/crowdsale").next 下一个

  div#tutorial-start.main-tutorial.token-tutorial.inner-header.inner-page.even
    .container
      .row
        .col-md-6.tutorial.scrollme
          +tokenFigureExit

        .col-md-6.tutorial.scrollme
          .header-title
            h3.animateme(data-when="exit", data-from="0", data-to="0.5", data-translatey="200", data-opacity="0", data-easing="linear") 创建你自己的
            h2.animateme(data-when="exit", data-from="0", data-to="1", data-translatey="400", data-easing="linear") 加密货币
            h3.animateme(data-when="exit", data-from="0", data-to="0.5", data-translatey="200", data-opacity="0", data-easing="linear") 使用以太坊


  .main-tutorial.inner-tutorial
    .container
      .row.scrollme
        +toc
        .col-md-12
          include:markdown-it(plugins=['markdown-it-include']) content/token.md
          a.button.small(href='https://github.com/ethereum/ethereum-org/edit/master/views/content/token.md') 改进这个页面

  .main-tutorial.even
    .container
      .row
        .col-md-12.tutorial
          +crowdsaleRecipe("下一步是什么？")


  script
    |  ((window.gitter = {}).chat = {}).options = {
    |    room: 'ethereum/tutorials'
    |  };

  script(src="https://sidecar.gitter.im/dist/sidecar.v1.js", async, defer)
