extends layout

block vars
  - var title='安装命令行工具'
  - var url='cli'
  - var image='cli'

block content
  include mixins/recipes.pug

  .breadcrumb.animateme(data-when="enter", data-from="1", data-to="0.8", data-opacity="0", data-translatey="-20")
    a(href="/").index Ethereum
    strong » 命令行工具
    a(href="/greeter").next 下一个

  div#tutorial-start.main-tutorial.cli-tutorial.inner-header.inner-page.even
    .container
      .row
        .col-md-6.tutorial.scrollme
          +gethFigureExit

        .col-md-6.tutorial.scrollme
          .header-title
            h2.animateme(data-when="exit", data-from="0", data-to="1", data-translatey="400", data-easing="linear") Geth & Eth
            h3.animateme(data-when="exit", data-from="0", data-to="0.5", data-translatey="200", data-opacity="0", data-easing="linear") 以太坊网络的命令行工具

  .main-tutorial.inner-tutorial
    .container
      .row
        +toc
        .col-md-12
          include:markdown-it content/cli.md
          a.button.small(href='https://github.com/ethereum/ethereum-org/edit/master/views/content/cli.md') 改进此页面

  .main-tutorial.even
    .container
      .row
        .col-md-12.tutorial
          +greeterRecipe("下一步是什么？")


  script
    |  ((window.gitter = {}).chat = {}).options = {
    |    room: 'ethereum/go-ethereum'
    |  };

  script(src="https://sidecar.gitter.im/dist/sidecar.v1.js", async, defer)
